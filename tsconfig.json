{
    "compilerOptions": {
      "target": "es6",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "commonjs",
      "baseUrl": "src",
      "paths": {
        "@/*": [
          "*"
        ],
        "@app": [
          "app"
        ],
        "@config/*": [
          "config/*"
        ],
        "@modules/*": [
          "modules/*"
        ],
        "@cronjob": [
          "cronjob"
        ],
      },
      "typeRoots": [
        "./node_modules/@types",
        "./src/types",
      ],
      "resolveJsonModule": true,
      "allowJs": true,
      "checkJs": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true /* Skip type checking all .d.ts files. */
    },
    "ts-node": {
      "files": true,
      "require": [
        "tsconfig-paths/register"
      ]
    }
  }
  